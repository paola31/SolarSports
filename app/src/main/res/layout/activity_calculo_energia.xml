<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454E5F"
    android:visibility="visible"
    tools:context=".RecuperarContrasena">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/franjaSuperior"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#66958566"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/lupa"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/lupa"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/button_header"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/stylo_borde_constrain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/franjaSuperior"
        app:layout_constraintVertical_bias="0.968">

        <TextView
            android:id="@+id/energiaGeneradaText2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alata"
            android:text="Energía generada:"
            android:textAlignment="center"
            android:textColor="#FFEBA6"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="9dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/gridLayoutBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:padding="8dp"
        android:rowCount="2"
        app:circularflow_radiusInDP="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312">

        <TextView
            android:id="@+id/latitud"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/alata"
            android:text="Latitud"
            android:textAlignment="center"
            android:textColor="#FFEBA6" />

        <EditText
            android:id="@+id/latitudDato"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/stylo_borde_editext"
            android:ems="10"
            android:hint="Grados"
            android:inputType="text"
            android:textColorHint="#A4ABAB"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/altitud"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/alata"
            android:text="Altitud"
            android:textAlignment="center"
            android:textColor="#FFEBA6" />

        <EditText
            android:id="@+id/altitudDato"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/stylo_borde_editext"
            android:ems="10"
            android:hint="Grados"
            android:inputType="text"
            android:textColorHint="#A4ABAB"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/inclinacionPanel"
            android:layout_width="107dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/alata"
            android:text="Inclinacion del panel "
            android:textAlignment="center"
            android:textColor="#FFEBA6" />

        <EditText
            android:id="@+id/inclinacionDato"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/stylo_borde_editext"
            android:ems="10"
            android:hint="Inclinación"
            android:inputType="text"
            android:textColorHint="#A4ABAB"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/cantPaneles"
            android:layout_width="93dp"
            android:layout_height="63dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/alata"
            android:text="Cantidad paneles "
            android:textAlignment="center"
            android:textColor="#FFEBA6" />

        <EditText
            android:id="@+id/cantPanelDato"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/stylo_borde_editext"
            android:ems="10"
            android:hint="Cantidad "
            android:inputType="text"
            android:textColorHint="#A4ABAB"
            android:textSize="11sp" />

    </GridLayout>

    <ImageView
        android:id="@+id/arrowLeft"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/franjaSuperior"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098"
        app:srcCompat="@drawable/arrow_left" />

    <TextView
        android:id="@+id/produccionEnergiaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alata"
        android:text="Producción de energía"
        android:textAlignment="center"
        android:textColor="#FFEBA6"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp" />

    <ImageView
        android:id="@+id/iconCasa"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703"
        app:srcCompat="@drawable/eco_electric_electricity" />

    <TextView
        android:id="@+id/calcularEnergia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alata"
        android:text="Calcular"
        android:textAlignment="center"
        android:textColor="#FFEBA6"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/arrowRigth"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471"
        app:srcCompat="@drawable/arrow_right" />

    <TextView
        android:id="@+id/energiaGeneradaText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alata"
        android:text="Energía generada"
        android:textAlignment="center"
        android:textColor="#B2852C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alata"
        android:text="20 de julio 2024"
        android:textAlignment="center"
        android:textColor="#FFEBA6"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/fecha2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alata"
        android:text="400 kwh"
        android:textAlignment="center"
        android:textColor="#B2852C"
        android:textSize="18sp"
        android:layout_marginTop="310dp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/bombillo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134"
        app:srcCompat="@drawable/light_bulb_svgrepo_com" />

</androidx.constraintlayout.widget.ConstraintLayout>

