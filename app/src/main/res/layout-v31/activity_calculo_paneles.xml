<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454E5F"
    android:visibility="visible"
    tools:context=".RecuperarContrasena">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="350dp"
        android:layout_height="487dp"
        android:background="@drawable/stylo_borde_constrain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/gridLayoutBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="2"
            android:padding="8dp"
            android:rowCount="4"
            app:circularflow_radiusInDP="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.542">

            <TextView
                android:id="@+id/tipoPanel"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/alata"
                android:text="Tipo de panel"
                android:textAlignment="center"
                android:textColor="#FFEBA6" />

            <Spinner
                android:id="@+id/opciones"
                style="@style/StyleSpinner"
                android:layout_width="140dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:background="@drawable/stylo_borde_editext"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/largo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/alata"
                android:text="Largo del espacio"
                android:textAlignment="center"
                android:textColor="#FFEBA6" />

            <EditText
                android:id="@+id/largoEspacio"
                android:layout_width="140dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/stylo_borde_editext"
                android:ems="10"
                android:hint="000 cm"
                android:inputType="text"
                android:textColorHint="#A4ABAB"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ancho"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/alata"
                android:text="Ancho del espacio"
                android:textAlignment="center"
                android:textColor="#FFEBA6" />

            <EditText
                android:id="@+id/anchoEspacio"
                android:layout_width="140dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/stylo_borde_editext"
                android:ems="10"
                android:hint="0000 cm"
                android:inputType="text"
                android:textColorHint="#A4ABAB"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/consumoHabitual"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/alata"
                android:text="Consumo de energía habitual"
                android:textAlignment="center"
                android:textColor="#FFEBA6" />

            <EditText
                android:id="@+id/consumoEnergia"
                android:layout_width="140dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/stylo_borde_editext"
                android:ems="10"
                android:hint="0000 cm"
                android:inputType="text"
                android:textColorHint="#A4ABAB"
                android:textSize="11sp" />

        </GridLayout>

        <TextView
            android:id="@+id/recuperacioContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alata"
            android:text="Calcúlo número de paneles"
            android:textAlignment="center"
            android:textColor="#FFEBA6"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="52dp"
            android:fontFamily="@font/alata"
            android:text="Calcular"
            android:textAlignment="center"
            android:textColor="#FFEBA6"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#66958566"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/lupa"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/lupa"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/button_header"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

